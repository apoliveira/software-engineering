doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(href="/stylesheets/bootstrap-3.3.4-dist/css/bootstrap.min.css", rel="stylesheet")
		script(src="http://code.jquery.com/jquery-2.1.3.min.js")
		script(src="/javascript/pdfjs/shared/util.js")
		script(src="/javascript/pdfjs/display/api.js")
		script(src="/javascript/pdfjs/display/metadata.js")
		script(src="/javascript/pdfjs/display/canvas.js")
		script(src="/javascript/pdfjs/display/webgl.js")
		script(src="/javascript/pdfjs/display/pattern_helper.js")
		script(src="/javascript/pdfjs/display/font_loader.js")
		script(src="/javascript/pdfjs/display/annotation_helper.js")
		script.
			PDFJS.workerSrc = '/javascript/pdfjs/worker_loader.js';
		script(src="/javascript/pdfjs/present.js")
		script.
			present("#{id}");

	body
		button(id="prev_page") Previous
		button(id="next_page") Next
		button(id="full_screen") Full Screen
		canvas(id="the-canvas", style="border:1px solid black;", allowfullscreen, webkitallowfullscreen)

