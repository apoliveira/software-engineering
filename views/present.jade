doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		meta(name="viewport", content="width=device-width, initial-scale=1")
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
		link(href="/stylesheets/bootstrap-3.3.4-dist/css/bootstrap.min.css", rel="stylesheet")
		script(type="text/javascript", src="/stylesheets/bootstrap-3.3.4-dist/js/bootstrap.min.js")
		script(src="/javascripts/pdfjs/shared/util.js")
		script(src="/javascripts/pdfjs/display/api.js")
		script(src="/javascripts/pdfjs/display/metadata.js")
		script(src="/javascripts/pdfjs/display/canvas.js")
		script(src="/javascripts/pdfjs/display/webgl.js")
		script(src="/javascripts/pdfjs/display/pattern_helper.js")
		script(src="/javascripts/pdfjs/display/font_loader.js")
		script(src="/javascripts/pdfjs/display/annotation_helper.js")
		script.
			PDFJS.workerSrc = '/javascripts/pdfjs/worker_loader.js';
		script(src='/socket.io/socket.io.js')
		script(src='/javascripts/presentation/socket.js')
		script(src="/javascripts/presentation/present.js")
		script.
			present("#{id}");
	body
		button(id="prev_page") Previous
		button(id="next_page") Next
		button(id="full_screen") Full Screen
		div.btn-group-horizontal(role="group")
			div.btn-group
				button#pen.btn.btn-default.dropdown-toggle( data-toggle="dropdown", onclick="javascript:pen();", style="background: grey;")
					span.glyphicon.glyphicon-pencil
				ul.dropdown-menu(role="menu")
					li
						input#pen-width-picker(type="range", min="1", max="30", step="1", value="2")
			input#color-picker(type="color")
			div.btn-group
				button#eraser.btn.btn-default.dropdown-toggle( data-toggle="dropdown", onclick="javascript:erase();")
					span.glyphicon.glyphicon-erase
				ul.dropdown-menu(role="menu")
					li
						input#eraser-width-picker(type="range", min="1", max="50", step="1", value="2")
			button.btn.btn-default(onclick="javascript:emitClearAll()")
				span.glyphicon.glyphicon-trash
			button.btn.btn-default(onclick="javascript:emitUndo()")
				span.glyphicon.glyphicon-arrow-left
			a.btn.btn-default(href="/presentation/#{id}/qr")
				span.glyphicon.glyphicon-qrcode
			a.btn.btn-default(href="/presentation/#{id}/pdf" download)
				span.glyphicon.glyphicon-download-alt
		div(style="width: 60%; height:60%;position: absolute;")
			canvas(id="draw", style="border:1px solid black; width:100%; height: 100%; position: absolute;", allowfullscreen, webkitallowfullscreen, resize="true")
			canvas(id="the-canvas", style="border:1px solid black; width: 100%; height: 100%; ", allowfullscreen, webkitallowfullscreen, resize="true")
		script(type='text/javascript', src='/javascripts/paper.js')
		script(type='text/paperscript', src='/javascripts/presentation/draw.js', canvas='draw')
